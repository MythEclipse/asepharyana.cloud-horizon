{
  "extends": "@asepharyana/config-typescript/base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "esModuleInterop": true,
    "rootDir": "./src",
    "declarationDir": "./types",
    "baseUrl": ".", 
    "paths": {
      "@/*": ["./src/*"]
    },
    "types": ["jest", "node"]
  },
  "include": ["next-env.d.ts", "src/**/*", "src/tests/**/*"],
  "exclude": ["node_modules", "types", "**/*.mjs"] // Removed trailing comma
}